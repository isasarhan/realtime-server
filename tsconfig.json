{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "build",
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "module": "Node16",
    "types": ["jest"],
    "allowSyntheticDefaultImports": true

  },
  "exclude": ["node_modules/"],
  "include": ["src/**/*.ts", "test/**/*.ts", "src/bin/www.ts"]
}